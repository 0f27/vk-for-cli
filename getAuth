response=$(curl -s "http://oauth.vk.com/oauth/authorize?redirect_uri=http://oauth.vk.com/blank.html&response_type=token&client_id="$client_id"&scope=friends&display=wap")
echo $response | grep -oE 'to\=[a-zA-Z0-9]+' | sort | uniq | sed 's/to=//g'
echo $response | grep -oE '\<input\ type\=\"hidden\"\ name\=\"lg_h\"\ value\=\"\w+'
